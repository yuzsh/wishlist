<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>i wish</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="/stylesheets/bootstrap-3.3.6-dist/css/bootstrap.min_paper.css" rel="stylesheet">
    <link href="stylesheets/style.css" rel="stylesheet">
    <link href="stylesheets/signin.css" rel="stylesheet">
</head>

<body class="bg-image-1">
    
    <div class="container">
        
        <div class="text-center" style="margin: 0 0 50px 0;">
            <h1 style="color: white;">i wish</h1>
        </div>
    
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="/signin" id="login-form-link">Login</a>
							</div>
							<div class="col-xs-6">
								<a href="#" class="active" id="register-form-link">Sign up</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<div style="padding: 0 0 20px 0">
										<h5 class="text-center text-danger"> Invalid Username or Email </h5>
								</div>
								<form id="login-form" action="/signup" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder=" Username" value="">
									</div>
									<div class="form-group">
										<input type="text" name="email" id="email" tabindex="2" class="form-control" placeholder=" E-mail" value="">
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="3" class="form-control" placeholder=" Password">
									</div>
									<div class="form-group">
										<input type="password" name="password_confirmation" id="password_confirmation" tabindex="4" class="form-control" placeholder=" Confirm Password">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-register" value="SignUp Now">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
    
</body>

