    <div class="container" style="padding:20px 0">
    
    <!-- Thumbnail -->
    <% @contents.each do |content| %>
        <% unless content.img == [] %>
                <div class="row" style="width: 35%; float: left;">
                  <div style="height: 500px;">
                    <div class="col-sm-6 col-md-3" style="width: 90%;">
                      <div class="thumbnail">
                        <a href="<%= content.img %>" data-lightbox="image">
                          <img src="<%= content.img %>" alt="<%= content.img %>" class="img-rounded img-responsive">
                        </a>
                        <div class="caption">
                          <h3><%= content.item_name %></h3>
                          <p><%= content.comment %></p>
                          <p>by : <a href=""><%= content.username %></a></p>
                          <span>Good: <%= content.good %></span>
                          <span style="padding: 0 0 0 30px">Want: <%= content.want %></span>
                          <div class="box" style="margin:10px;"></div>
                          <span class="btn-group">
                              <form action="/good/<%= content.id %>" method="post">
                                  <input type="submit" class="btn btn-primary" value="&#xf087;Good!"></input>
                              </form>
                          </span>
                          <span class="btn-group pull-right">
                              <form action="/want/<%= content.id %>" method="post">
                                  <input type="submit" class="btn btn-success" value="&#xf087;Want!"></input>
                              </form>
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
        <% end %>
    <% end %>
