
<body>
    <!-- navigation bar -->
      <nav class="navbar navbar-default">
        <div class="navbar-header">
          <a href="" class="navbar-brand active">i wish</a>
        </div>

        <div class="cillapse navbar-collapse target">
          <ul class="nav nav-tabs">
            <li class="active" data-toggle="tab"><a href="#home">Home</a></li>
            <li data-toggle="tab"><a href="#upload">Upload</a></li>
            <li data-toggle="tab" class="navbar-right"><a href="/signin">Sign in</a></li>
            <li data-toggle="tab" class="navbar-right"><a href="/signup">Sign up</a></li>
          </ul>
        </div>
      </nav>
    <!---->
    
    <!-- Upload Image -->
    <div class="tab-pane fade in" id="upload">
        <header class="container" style="padding:20px 0;background:#f5f5f5;">
            <div class="">
                <div class="container" style="padding:20px 10;">
                    <form action="/new" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="form-group form-inline col-md-3">
                                <input type="text" class="form-control" placeholder=" Enter Image URL" name="image_url">
                                <input type="submit" class="btn btn-success" value="Go"></input>
                            </div>
                            <div class="col-md-1" style="font-size:large; color:#777777">
                                <span> or </span>
                            </div>
                            <div class="col-md-6">
                                <p><input type="file" name="file" class="btn btn-success"></p>
                            </div>
                        </div>
                        <div class="form-group">
                              <p>item：<input type="text" class="form-control" placeholder=" Item_name" name="item_name"></p>
                              <p>comment：<input type="text" class="form-control" placeholder=" Comment" name="comment"></p>
                        </div>
                        <p><input type="submit" class="btn btn-primary" value="&#xf093;Upload"></p>
                    </form>
                </div>
            </div>
        </header>
    </div>
    <!---->
    
    <div class="container" style="padding:20px 0">
        <!-- navigation bar -->
      <nav class="navbar navbar-default">
        <div class="navbar-header">
        </div>

        <div class="cillapse navbar-collapse target">
          <ul class="nav navbar-nav">
            <li><a href="">Sort by: </a></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="Search">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
              </form>
          </ul>
        </div>
      </nav>
        <!---->
    </div>
    
    <div class="container" style="padding:20px 0">
    
    <!-- Thumbnail -->
    <% @contents.each do |content| %>
        <% unless content.img.empty? %>
                <div class="col">
                  <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                      <img src="<%= content.img %>" class="img-rounded img-responsive">
                      <div class="caption">
                        <h3><%= content.item_name %></h3>
                        <p><%= content.comment %></p>
                        <p>by : user name</p>
                        <span>Good: <%= content.good %></span>
                        <div class="box" style="margin:10px;"></div>
                        <span>
                            <form action="/good/<%= content.id %>" method="post">
                                <input type="submit" class="btn btn-primary" value="&#xf087;Good!"></input>
                            </form>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
        <% end %>
    <% end %>
    <!---->
    
    </div>
    
    <div class="container" style="padding:20px 0">
    
        <!-- pager -->
        <ul class="pager">
            <li class="previous"><a href="">prev</a></li>
            <li class="next"><a href="">next</a></li>
        </ul>
        <!---->
        
        <!-- edit -->
        <form action="/edit" method="post">
            <input type="submit" class="btn btn-success" value="&#xf044;Edit"></input>
        </form>
        <!---->
    
    </div>
    
</body>
